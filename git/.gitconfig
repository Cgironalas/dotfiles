[user]
  name = Carlos Giron
  email = cgironalas@gmail.com

[core]
  editor = nvim
  autocrlf = input
  safecrlf = true

[alias]
  br = branch
  ; -- test if git cb creates a branch by receiving a parameter
  ; cb = checkout -b
  ci = commit
  co = checkout
  df = diff
  dfs = diff --staged
  dump = cat-file -p
  hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
  st = status
  type = cat-file -t
  ut = status -u

[commit]
  verbose = true
