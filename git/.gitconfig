[user]
  name = Carlos Giron
  email = cgironalas@gmail.com
[core]
  editor = nvim
  autocrlf = input
  safecrlf = true

[alias]
  co = checkout
  ci = commit
  st = status
  ut = status -u
  br = branch
  hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
  type = cat-file -t
  dump = cat-file -p
