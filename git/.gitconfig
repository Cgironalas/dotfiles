[user]
  name = Carlos Giron
  email = cgironalas@gmail.com

[core]
  editor = nvim
  autocrlf = input
  safecrlf = true

[alias]
  br = branch
  ; Can create branches by just adding a parameter at the end
  ; Less ideal if using the gcb alias in bashrc
  cb = checkout -b
  ci = commit
  co = checkout
  df = diff
  dfs = diff --staged
  dump = cat-file -p
  gr = grep
  gri = grep --ignore-case
  st = status
  type = cat-file -t
  ut = status -u
  hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short

[commit]
  verbose = true
